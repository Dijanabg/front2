@page
@model IndexModel
@{
    ViewData["Title"] = "Konvertor";
}

<main>
    <div>
        <form method="post" asp-page-handler="Cirilica">
            <label for="cirilica">Tekst na ćirilici:</label>
            <br />
            <input type="text" id="cirilica" asp-for="CirilicniTekst" /><br />
            <button type="submit">Prevedi na latinicu</button>
        </form>

        <form method="post" asp-page-handler="Latinica">
            <label for="latinica">Tekst na latinici:</label><br />
            <input type="text" id="latinica" asp-for="LatinicniTekst" /><br />
            <button type="submit">Prevedi na ćirilicu</button>
        </form>
        @if (Model.Poruka != null)
        {
            <p>@Model.Poruka</p>
        }
        </div>
</main>

<footer>
    <div class="footer-text">Elektrotehnička škola "Nikola Tesla" Beograd</div>
